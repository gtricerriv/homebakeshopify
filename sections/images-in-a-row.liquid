{{ 'logo-list.css' | asset_url | stylesheet_tag }}
  <style>

    [data-section-id="{{ section.id }}"] {
      background-image: url({{ 'home-logos-section-background.png'| asset_img_url: 'master' }});
      background-repeat: no-repeat;
      background-size: cover;
    }
   
    [data-section-id="{{ section.id }}"] .logo-list__title {
      color: {{ section.settings.title_color }};
    }
    [data-section-id="{{ section.id }}"] .logo-list__image {
      margin: 0 auto;
    }
    [data-section-id="{{ section.id }}"] .logo-list__image + p {
      color: {{ section.settings.title_color }};
    }
    .py-section{
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    @media(max-width: 768px) {
      .logo-list__item {
          min-height: 100px;
      }
    }
    @media (min-width: 768px) {
      
    }
  </style>
  <div class="logo-list"
    data-section-id="{{ section.id }}"
    data-section-type="logo-list">
    
    {%- if section.settings.title != blank -%}
      <h3 class="logo-list__title">{{ section.settings.title | escape }}</h3>
    {%- endif -%}
    
    <div class="logo-list__container">
      {%- for block in section.blocks -%}
        <div class="logo-list__item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
  
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}">
            {%- endif -%}
  
            {{ block.settings.image | image_url: width: 'master' | image_tag: 
              class: 'logo-list__image',
              loading: 'lazy' }}
  
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'logo-list__image placeholder-svg' }}
          {%- endif -%}
          {%- if block.settings.title != blank %}
            {{ block.settings.title }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  
  </div>
  
  {% schema %}
  {
    "name": "Logo list",
    "class": "logo-list-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Logo item",
        "default": "Logo list"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Text color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo images",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "URL"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo list",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
  {% endschema %}
  