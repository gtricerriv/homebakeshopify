{{ 'logo-list.css' | asset_url | stylesheet_tag }}
  <style>
    .logo-list-section{
  
    }
    [data-section-id="{{ section.id }}"] {
      background-image: url({{ 'background_paper.png'| asset_img_url: 'master' }});
      background-repeat: no-repeat;
      background-size: cover;
    }
   
    [data-section-id="{{ section.id }}"] .logo-list__title {
      color: {{ section.settings.title_color }};
    }
    [data-section-id="{{ section.id }}"] .logo-list__image {
      margin: 0 auto;
    }
    [data-section-id="{{ section.id }}"] .logo-list__image + p {
      color: {{ section.settings.title_color }};
    }
    .py-section{
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
        
    @media(max-width: 768px) {
      .logo-list__item {
          min-height: 100px;
      }
    }
    @media (min-width: 768px) {
      
    }
  </style>
  <div class="logo-list"
    data-section-id="{{ section.id }}"
    data-section-type="logo-list">
    
    {%- if section.settings.title != blank -%}
      <h3 class="logo-list__title">{{ section.settings.title | escape }}</h3>
    {%- endif -%}
    
    <div class="logo-list__container">
      <div class="logo-list__item">
        <img loading="lazy" src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/asset_5_42a1dff6-8ff3-4fc4-b821-9486dad72af2.png?v=1666347085" alt="">
        <p>SELECT</p>
      </div>
      <div class="logo-list__item">
        <img loading="lazy" src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/asset_7_7604a458-9098-4143-bfbe-ed2c386956a9.png?v=1666347227" alt="">
        <p>BAKE</p>
      </div>
      <div class="logo-list__item">
        <img loading="lazy" src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/asset_9_5d8a1a6c-f5f5-4018-8a1c-72c39d8b5adb.png?v=1666347227" alt="">
        <p>SERVE</p>
      </div>
      {% comment %}
      {%- for block in section.blocks -%}
        <div class="logo-list__item" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
  
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}">
            {%- endif -%}
  
            {{ block.settings.image | image_url: width: 960 | image_tag: 
              class: 'logo-list__image',
              widths: '160, 220, 300, 420, 640, 960',
              sizes: image_sizes,
              loading: 'lazy' }}
  
              {%- if block.settings.link != blank -%}
                </a>
              {%- endif -%}
          {%- else -%}
            {{ 'logo' | placeholder_svg_tag: 'logo-list__image placeholder-svg' }}
          {%- endif -%}
          {%- if block.settings.title != blank %}
            {{ block.settings.title }}
          {%- endif -%}
        </div>
      {%- endfor -%}
      {% endcomment %}
    </div>
    <div class="image-container">
      <img class="side-image" src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/image_85.png?v=1667964776" alt="baked food from Homebake 425 30"/>
    </div>
  
  </div>
  
  {% schema %}
  {
    "name": "Logo list",
    "class": "logo-list-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Logo item",
        "default": "Logo list"
      },
      {
        "type": "color",
        "id": "title_color",
        "label": "Text color",
        "default": "#ffffff"
      }
    ],
    "blocks": [
      {
        "type": "logo_image",
        "name": "Logo images",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "URL"
          },
          {
            "type": "richtext",
            "id": "title",
            "label": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo list",
        "blocks": [
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          },
          {
            "type": "logo_image"
          }
        ]
      }
    ]
  }
  {% endschema %}
  