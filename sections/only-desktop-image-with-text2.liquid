{{ 'only-desktop-image-with-text2.css' | asset_url | stylesheet_tag }}

{%- style -%}
{%- endstyle -%}

<div class="only-desktop-image2">
      <div class="image-with-text__text-item2 text-column2">
        <p class="marquee">{{ section.settings.text_marquee }}</p>
        <div id="ImageWithText--{{ section.id }}" class="content-wrapper2">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h2 class="section-heading2 image-with-text__heading2 {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | escape }}
                </h2>
            {%- endcase -%}
          {%- endfor -%}
        </div>
    <div class="blue_section_img_container">
          <img src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/Frame_40430_29fc50c7-8b11-452d-b9b6-80cbe0b382c8.png?v=1668544190">
        </div>
        <div id="ImageWithText--{{ section.id }}" class="content-wrapper2">
          {%- for block in section.blocks -%}
            {% case block.type %}
                <div class="image-with-text__text2 rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="section-button2" {{ block.shopify_attributes }}>
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}
        </div>
        <p class="marquee">{{ section.settings.text_marquee }}</p>
  </div>
</div>

<style>
  .blue_section_img_container{
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
    width: 100%;
  }

  .blue_section_img_container img{
    max-width: 692px;
  }
</style>


