{{ 'only-desktop-image-with-text2.css' | asset_url | stylesheet_tag }}

{%- style -%}
{%- endstyle -%}

<div class="only-desktop-image2">
      <div class="image-wrapper2 image-column2">
        <img loading="lazy" src="{{ 'BakedFood.png' | asset_img_url: '2048x2048' }} " alt="{{ block.settings.image.alt | escape }}" class="image-only-on-desktop2">
        <img loading="lazy" src="{{ 'mobilebaked.png' | asset_img_url: 'master' }}" alt="Baked food" class="image-only-on-section2-mobile"/>
      </div>

      <div class="image-with-text__text-item2 text-column2">
        <p class="marquee"><img src="https://cdn.shopify.com/s/files/1/0607/3571/7552/files/Main_veggie_side_marquee.png?v=1667922635" alt="MAIN • VEGGIE • SIDE • MAIN • VEGGIE • SIDE • MAIN • VEGGIE • SIDE • "></p>
        <div id="ImageWithText--{{ section.id }}" class="content-wrapper2">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h2 class="section-heading2 image-with-text__heading2 {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                  {{ block.settings.heading | escape }}
                </h2>
              {%- when 'caption' -%}
                <p class="image-with-text__text2 image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.caption | escape }}</p>
              {%- when 'text' -%}
                <div class="image-with-text__text2 rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="section-button2" {{ block.shopify_attributes }}>
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}
                {%- when 'collection' -%}
                    <div class="collection__item" {{ block.shopify_attributes }}>
                        {%- if block.settings.image_collection != blank -%}
                
                          {%- if block.settings.link_collection != blank -%}
                            <a href="{{ block.settings.link_collection }}">
                          {%- endif -%}
                
                          {{ block.settings.image_collection | image_url: width: 190 | image_tag: 
                            class: 'collection-list__image',
                            widths: '190, 220, 300, 420, 640, 960',
                            sizes: image_sizes,
                            loading: 'lazy' }}
                
                            {%- if block.settings.link_collection != blank -%}
                              </a>
                            {%- endif -%}
                        {%- else -%}
                          {{ 'logo' | placeholder_svg_tag: 'logo-list__image placeholder-svg' }}
                        {%- endif -%}
                        {%- if block.settings.title_collection != blank %}
                          {{ block.settings.title_collection }}
                        {%- endif -%}
                      </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
        <p class="marquee">{{ section.settings.text_marquee }}</p>
  </div>
</div>


